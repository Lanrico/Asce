{
  "manifest_version": 3,
  "name": "Asce",
  "version": "0.4",
  "description": "这是一个整合了video nail、asoul tewtab和成就系统的插件",
  "icons": {
    "128": "img/A-SOULlogo.png",
    "48": "img/A-SOULlogo.png",
    "16": "img/A-SOULlogo.png"
  },
  "action": {
    "default_icon": "img/A-SOULlogo.png",
    "default_popup": "popup.html"
  },

  "permissions": [
    "storage",
    "topSites",
    "tabs",
    "activeTab",
    "scripting",
    "notifications"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.bilibili.com/*"
      ],
      "js": [
        "js/jquery-3.6.0.min.js",
        "bootstrap-5.1.3-dist/js/bootstrap.bundle.min.js",
        "js/Achievement.js"
      ],
      "css": [
        "bootstrap-5.1.3-dist/css/bootstrap.min.css",
        "css/videonail.css",
        "css/AchievementTip.css"
      ],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "img/*"
      ],
      "matches": [
        "https://*.bilibili.com/*"
      ]
    }
  ],
  "background":
	{
    "service_worker": "js/background.js"
	}
}