{
  "manifest_version": 3,
  "name": "Asce",
  "version": "0.9",
  "description": "这是一个Asoul风格的Chrome美化插件",
  "icons": {
    "128": "img/A-SOULlogoCircle.png",
    "48": "img/A-SOULlogoCircle.png",
    "16": "img/A-SOULlogoCircle.png"
  },
  "action": {
    "default_icon": "img/A-SOULlogoCircle.png",
    "default_popup": "popup.html"
  },

  "permissions": [
    "storage",
    "topSites",
    "tabs",
    "activeTab",
    "scripting",
    "notifications"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.bilibili.com/*"
      ],
      "js": [
        "js/jquery-3.6.0.min.js",
        "bootstrap-5.1.3-dist/js/bootstrap.bundle.min.js",
		"js/clip.js",
        "js/Achievement.js",
        "js/oh-my-diana.user.js"
      ],
      "css": [
        "bootstrap-5.1.3-dist/css/bootstrapForVideoMark.css",
        "css/videoMark.css",
        "css/AchievementTip.css"
      ],
      "run_at": "document_start"
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "img/*"
      ],
      "matches": [
        "https://*.bilibili.com/*"
      ]
    }
  ],
  "background":
	{
    "service_worker": "js/background.js"
	}
}
